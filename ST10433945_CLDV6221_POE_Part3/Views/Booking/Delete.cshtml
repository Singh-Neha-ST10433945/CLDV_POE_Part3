@model EventEaseBookingSystem.Models.Booking
@{
    ViewData["Title"] = "Delete Booking";
}

<h2 class="text-danger"><i class="fas fa-trash"></i> Confirm Delete</h2>

<p class="text-warning">Are you sure you want to delete this booking?</p>

<div class="mb-3">
    <strong>Event:</strong> @Model.Event?.EventName<br />
    <strong>Venue:</strong> @Model.Venue?.VenueName<br />
    <strong>Date:</strong> @Model.BookingDate.ToShortDateString()<br />
    <strong>Time:</strong> @Model.BookingDate.ToShortTimeString()
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="BookingId" />
    <button type="submit" class="btn btn-danger">
        <i class="fas fa-trash-alt"></i> Yes, Delete
    </button>
    <a asp-action="Index" class="btn btn-dark ms-2">Cancel</a>
</form>