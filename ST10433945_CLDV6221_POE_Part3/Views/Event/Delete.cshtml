@model EventEaseBookingSystem.Models.Event
@{
    ViewData["Title"] = "Delete Event";
}

<h2 class="text-danger">🗑️ Delete Event</h2>
<h5 class="text-warning">Are you sure you want to delete this event?</h5>

<div class="mb-3">
    <strong>Name:</strong> @Model.EventName<br />
    <strong>Venue:</strong> @Model.Venue?.VenueName<br />
    <strong>Date:</strong> @Model.EventDateTime.ToShortDateString()<br />
    <strong>Time:</strong> @Model.EventDateTime.ToShortTimeString()<br />
    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <img src="@Model.ImageUrl" class="img-thumbnail mt-2" style="max-height: 120px;" />
    }
</div>

<form asp-action="DeleteConfirmed" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" value="@Model.EventId" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>
