@model EventEaseBookingSystem.Models.Venue
@{
    ViewData["Title"] = "Delete Venue";
}

<h2 class="text-danger">🗑️ Delete Venue</h2>
<p class="text-warning">Are you sure you want to delete this venue?</p>

<div class="mb-3">
    <strong>Name:</strong> @Model.VenueName<br />
    <strong>Location:</strong> @Model.Location<br />
    <strong>Capacity:</strong> @Model.Capacity<br />
    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <img src="@Model.ImageUrl" class="mt-2" style="width: 100px;" />
    }
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="VenueId" />
    <button type="submit" class="btn btn-danger me-2"><i class="fas fa-trash"></i> Yes, Delete</button>
    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Cancel</a>
</form>
